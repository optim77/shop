{% extends "ShopBundle:BASE:base.html.twig" %}
{% block title %}Brands{% endblock %}
{% block subscribe %}<hr>{% endblock %}
{% block mainContent %}

    {% if brands is defined and brands is not null %}
        
        {% for brand in brands %}
            <a href="{{ path('brand', {'brand': brand.slug } ) }}">
                <div style="float: left;text-align: center;font-size: 20px;">
                    <div style="width: 200px;height: 150px;text-align: center">
                        {% dump(brand) %}
                        <img src="{{ asset(brand.image) }}" width="200px"><br>
                    </div>
                    <div style="padding: 10px;color: #000;font-weight: 900;margin-top: 50px;">
                        {% spaceless %}{{ brand.name }}{% endspaceless %}
                    </div>
                </div>
            </a>


            
        {% endfor %}
            <div style="clear: both;"></div>
    {% endif %}

{% endblock %}