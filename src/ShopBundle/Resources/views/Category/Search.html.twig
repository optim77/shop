{% extends "ShopBundle:BASE:base.html.twig" %}
{% block subscribe %}<hr>{% endblock %}
{% block title %}{{ app.request.get('search')|capitalize }}{% endblock %}
{% block section %}{{ app.request.get('search')|capitalize }}{% endblock %}
{% block amountItems %} {{ products|length }} items {% endblock %}
{% block mainContent %}

    {% if products is defined and products is not null %}

        <div class="w3-row ">

            {% for product in products %}

                <div class="w3-col  s6 " style="float: left;">
                    <div class="w3-container" style="float: left;">
                        <a href="{{ path('product', {'product': product.slug }) }}" style="text-decoration: none">
                            <img src="{{ asset(product.images) }}" width="150%"  style="width:100%" >
                            <p style="font-weight: 900;font-size: 20px;padding: 10px;text-align: center">{{ product.name|capitalize }}</p>
                        </a>
                    </div>

                </div>

            {% endfor %}

        </div>

        {% else %}
            <div class="jumbotron">{% trans %}No products in this category{% endtrans %}</div>
    {% endif %}

{% endblock %}